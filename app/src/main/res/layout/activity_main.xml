<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="end"
        android:hint="0"
        android:maxLength="15"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row1"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageButton
            android:id="@+id/btnC"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/top_buttons_background"
            android:src="@drawable/ic_backspace_black_24dp"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnAc"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/top_buttons_background"
            android:text="C"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnSquareRoot"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/top_buttons_background"
            android:text="√"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/action_button_background"
            android:text="÷"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row2"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/row1">

        <Button
            android:id="@+id/btn7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/regular_button_background"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/regular_button_background"
            android:text="8"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/regular_button_background"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/action_button_background"
            android:text="×"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row3"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/row2">

        <Button
            android:id="@+id/btn4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/regular_button_background"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/regular_button_background"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/regular_button_background"
            android:text="6"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/action_button_background"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row4"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/row3">

        <Button
            android:id="@+id/btn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/regular_button_background"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/regular_button_background"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/regular_button_background"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/action_button_background"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/row5"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/row4">

        <Button
            android:id="@+id/btn0"
            android:layout_width="138dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/zero_button_background"
            android:gravity="start"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/regular_button_background"
            android:text="."
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/action_button_background"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:typeface="sans" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>